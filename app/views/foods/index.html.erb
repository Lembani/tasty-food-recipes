<div class='container'>
    <div class="row d-flex justify-content-center">
        <div class="col-12">
            <h2 class="d-flex justify-content-center text-primary">List of  foods</h2>
            <h3 class="d-flex justify-content-end">
             <%= link_to "Add Food", new_user_food_path(current_user.id) %></h3>
        </div>
        <div class="col-12">
            <table class="table  table-hover table-bordered table-striped  table-responsive">
                <thead>
                  <tr class="bg-info">
                    <th scope="col">#</th>
                    <th scope="col">Food name</th>
                    <th scope="col">Measurement unit</th>
                    <th scope="col">Price</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                <% @foods.each_with_index do |food, index| %>
                <tr>
                <td><%= index+1%></td>
                <td><%= food.name %></td>
                <td><%= food.measurement_unit %></td>
                <td> $<%= food.price %></td>
              <td>
                <% if can? :manage, food %>
                <%= button_to "Remove", user_food_path(food.user, food.id), data: {turbo:false}, method: :delete, class: 'btn btn-danger btn-sm'%>
                <% end %>
              </td>
            </tr>
            <% end %>
            </tbody>
        </table>
        </div>
    </div>
</div>